{
  "name": "hatebu-pwa",
  "version": "0.1.0",
  "description": "Hatena Bookmark search app.",
  "homepage": "https://hatebupwa.netlify.com/",
  "private": true,
  "scripts": {
    "build": "npm-run-all build:worker build:react",
    "build:react": "react-scripts-ts build",
    "build:worker": "webpack --mode production --config webpack.worker.config.js",
    "precommit": "lint-staged",
    "postcommit": "git reset",
    "eject": "react-scripts-ts eject",
    "start": "npm-run-all build:worker start:*",
    "start:react": "react-scripts-ts start",
    "test": "react-scripts-ts test --env=node",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\""
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": false,
    "tabWidth": 4
  },
  "dependencies": {
    "@types/debug": "^0.0.30",
    "@types/prop-types": "^15.5.2",
    "@uifabric/icons": "^5.7.0",
    "@uirouter/react": "^0.6.2",
    "almin": "^0.16.0",
    "almin-logger": "^6.1.5",
    "date-fns": "^1.29.0",
    "ddd-base": "^0.4.0",
    "debounce-promise": "^3.1.0",
    "debug": "^3.1.0",
    "hatebu-mydata-parser": "^1.0.0",
    "highlight-words-core": "^1.2.0",
    "localforage": "^1.7.1",
    "localforage-memoryStorageDriver": "^0.9.2",
    "micro-memoize": "^2.0.1",
    "office-ui-fabric-react": "^5.79.1",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "react-highlight-words": "^0.11.0",
    "react-routing-resolver": "^2.0.1",
    "react-scripts-ts": "2.14.0",
    "regex-combiner": "^1.0.1",
    "search-query-tester": "^1.0.1",
    "webworker-promise": "^0.4.1"
  },
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "@types/node": "^9.6.2",
    "@types/react": "^16.3.5",
    "@types/react-dom": "^16.0.4",
    "express": "^4.16.3",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.4",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.11.1",
    "ts-loader": "^4.2.0",
    "typescript": "^2.8.1",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14"
  },
  "resolutions": {
    "@types/react": "16.3.5",
    "@types/react-dom": "16.0.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "proxy": {
    "/hatebu": {
      "target": "http://b.hatena.ne.jp",
      "pathRewrite": {
        "^/hatebu": ""
      },
      "changeOrigin": true
    },
    "/user": {
      "target": "http://localhost:3000/",
      "pathRewrite": {
        "^/user/*": "/index.html"
      }
    }
  }
}
